</div>

<div class="input-append" style="width: 130px; display:inline; float:left; margin-left:40px">
  <%= f.text_field :refused, :class => "span2" , :type => 'text',
              :value => @last_entry.refused, :style=>"width: 60px;" %>
  <span class="add-on" style="background-color: #EAE9F2;">Elderly</span>
</div>
</div>
</div>

<div class="row-fluid">
<div class= "span12">

<div class="input-append" style="width: 130px; display:inline; float:left; margin-left:490px">
  <%= f.text_field :lost, :class => "span2" , :type => 'text',
              :value => @last_entry.lost, :style=>"width: 60px;" %>
  <span class="add-on" style="background-color: #EEE0E1;">Lost</span>
</div>

<div class="input-append" style="width: 130px; display:inline; float:left; margin-left:40px">
  <%= f.text_field :refused, :class => "span2" , :type => 'text',
              :value => @last_entry.refused, :style=>"width: 60px;" %>
  <span class="add-on" style="background-color: #EAE9F2;">Pregnant</span>
</div>

</div>
</div>
<%= f.submit "Create" %>
<% end %>

