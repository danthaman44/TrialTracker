  <li><a href="#lost" data-toggle="pill">Lost</a></li>
</ul>

<div class="tab-content">
<!-- start tab content -->

<% @categories.each do |category| %> 

<div class="tab-pane fade in<% if category== 'enrolled' %> 
    <%= 'active' %>
    <% end %>" id="<%=category %>">

    <div class="row-fluid">
        <div class= "span8">

        <h4>Subjects <%=category.capitalize %></h4> 
         <div id="<%=category + '_chart' %>"></div>
        </div>

    <div class= "span4">

         <table class="table table-condensed table-hover" style="display:inline; float:right; margin-top:10px">
            <tr style="border-top: 2px solid #ccc;"><th style = "font-size:14px;">Total <%=category.capitalize %></th><td style = "font-size:14px; text-align: right;">218</td></tr>

            <% if (@first_trial.enrolledGoal != nil) %>
            <tr>
                <th style = "font-size:14px;">Goal <a id="changeGoal" style = "font-size:13px; font-weight:normal" href = "#">change</a></th>
                <td style = "font-size:14px; text-align: right;">
                    <div id = "goalContent"> <%= @first_trial.enrolledGoal %></div>
                </td>
            </tr>

            <% else %>
            <tr><th><a href="goalModal" role="button" class="btn btn-success" data-toggle="modal">Set Goal</a></th><td></td></tr>
            <% end %>

            <tr><th style = "font-size:14px">Avg/Month</th><td style = "font-size:14px; text-align: right;">62.5</td></tr>
            <tr><th style = "font-size:14px">Avg/Week</th><td style = "font-size:14px; text-align: right;">19.3</td></tr>
            <tr><th style = "font-size:14px">Est. by Jan 19th</th><td style = "font-size:14px; text-align: right;"> 280</td></tr>

         </table>

         
    </div>
    </div>
    <div class="row-fluid">
        <div class= "span8">
            <form class="form-inline" action="#" method="post">
                    <div class="btn-group" data-toggle="buttons-checkbox">
                        <button type="button" class="btn btn-inverse active" id = <%= category + '_4_button'%> style = "color:#849CCC" >Progress</button>
                        <button type="button" class="btn btn-inverse" style = "color:#dc3912" id = <%= category + '_2_button'%>>Target</button>
                        <button type="button" class="btn btn-inverse" style = "color:#ff9900" id = <%= category + '_1_button'%>>Projected</button>
                    </div>
                    
                </form>

        </div>
    </div>
</div> <!-- end Category content -->

<% end %>

