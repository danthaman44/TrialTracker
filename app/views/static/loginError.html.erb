		<legend> Login </legend>

    <% if session[:loginError] == 'unactivated' %>
        <div class="alert">
            <button type="button" class="close" data-dismiss="alert">&times;</button>Your account has not yet been activated. Please check your email for an activation link.
        </div>
    <% end %>

    <% if session[:loginError] == 'wrongPassword'  %>
        <div class="alert">
            <button type="button" class="close" data-dismiss="alert">&times;</button>The email and password that you
            entered do not match any records in our database.
        </div>
    <% end %>

    <% if session[:loginError] == 'newPassword'  %>
        <div class="alert alert-success">
            <button type="button" class="close" data-dismiss="alert">&times;</button>You have been sent an email with a new password.
        </div>
    <% end %>

    <% if session[:loginError] == 'newPasswordwrongEmail'  %>
        <div class="alert">
            <button type="button" class="close" data-dismiss="alert">&times;</button>We have no record of an account with the email that you entered.
        </div>
    <% end %>

    <% if session[:loginError] == 'registered'  %>
        <div class="alert alert-success">
            <button type="button" class="close" data-dismiss="alert">&times;</button>You have been sent an email with a link to activate your account.
        </div>
    <% end %>



    <% session[:loginError] = nil%>

    <%= form_tag ("/login"), :class=>"form-horizontal" do |login_form | %>    

  <div class = "row-fluid">
    <div class ="span2">
    </div>
      <div class="span10">

  <div class="control-group">
      <label class="control-label" for="email">Email</label>
      <div class="controls">
        <%= text_field_tag :email, '', :style => "height:30px" %>
      </div>
    </div>
    
    <div class="control-group">
      <label class="control-label" for="password">Password</label>
      <div class="controls">
        <%= password_field_tag :password, '', :style => "height:30px" %>
      </div>
    </div>
    <div class="control-group">
      <div class="controls">
      <%= submit_tag ('Sign In'), :class => "btn btn-primary" %>
        </div>
      </div>
    <% end %>



  <div class="accordion" id="accordion2">
  <div class="accordion-group">
    <div class="accordion-heading">
      <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#collapseOne">
        Forgot Your Password?
      </a>
    </div>
    <div id="collapseOne" class="accordion-body collapse">
      <div class="accordion-inner">
        Enter your email and we'll send send you a new password. 

        <%= form_tag ("/forgotPassword"), :class=>"form-horizontal" do |login_form | %>   
        
         <div class="control-group">
          <label class="control-label" for="email">Email</label>
          <div class="controls">
          <%= text_field_tag :email, '', :style => "height:30px" %>
          </div>
          </div>

          <div class="control-group">
            <div class="controls">
              <%= submit_tag ('Submit'), :class => "btn btn-success" %>
            </div>
          </div>
         <% end %>
      </div>
    </div>
  </div>
